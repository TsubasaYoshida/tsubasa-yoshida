!!!
%html.h-100
  %head
    %title TsubasaYoshida
    = csrf_meta_tags
    = csp_meta_tag
    %meta{charset: 'utf-8'}/
    %meta{'http-equiv': 'X-UA-Compatible', content: 'IE=edge'}/
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1'}/
    %meta{'http-equiv': 'content-language', content: 'ja'}/
    %meta{name: 'description', content: '札幌のプログラマ 吉田翼です。Railsのお仕事を探しています。'}/
    /[if lt IE 9]
      %script{src: 'https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js'}
      %script{src: 'https://oss.maxcdn.com/respond/1.4.2/respond.min.js'}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body.d-flex.flex-column.h-100
    %header.pb-3.pb-sm-4
      %nav.navbar.navbar-expand-md.navbar-dark.bg-dark.sticky-top
        .container
          = link_to 'Tsubasa Yoshida', :root, class: 'navbar-brand text-decoration-none'
          %button.navbar-toggler{type: 'button', 'data-toggle': 'collapse', 'data-target': '#navbar-content', 'aria-controls': 'navbar-content', 'aria-expanded': 'false', 'aria-label': 'Toggle navigation'}
            %span.navbar-toggler-icon
          .collapse.navbar-collapse{id: 'navbar-content'}
            %ul.navbar-nav.ml-auto
              %li.nav-item.pt-1
                = link_to 'profile', '#', class: 'nav-link'
              %li.nav-item.pt-1
                = link_to 'career', '#', class: 'nav-link'
              %li.nav-item.pt-1
                = link_to 'work', '#', class: 'nav-link'
              %li.nav-item.pt-1
                = link_to 'bookshelf', '#', class: 'nav-link'
              %li.nav-item.pt-1
                = link_to 'blog', blogs_path, class: 'nav-link'
              %li.nav-item.pt-1
                = link_to 'contact', contact_path, class: 'nav-link'
              %li.nav-item.pt-1.mr-3
                = link_to 'bcl_follower', bcl_index_path, class: 'nav-link'
    %main.mb-5
      = yield
    %footer.text-center.mt-auto
      %nav.navbar.navbar-expand.navbar-dark.bg-dark.justify-content-center.pt-3
        %ul.navbar-nav
          %li.nav-item.pt-1
            = link_to 'GitHub', 'https://github.com/TsubasaYoshida', class: 'nav-link'
          %li.nav-item.pt-1
            = link_to 'Twitter', 'https://twitter.com/tsubasa_upset', class: 'nav-link'
          %li.nav-item.pt-1
            = link_to 'Qiita', 'https://qiita.com/tsubasa_upset', class: 'nav-link'
          %li.nav-item.pt-1
            = link_to 'Wantedly', 'https://www.wantedly.com/users/70103878', class: 'nav-link'
      .bg-dark.pb-4
        &#169; 2019 Tsubasa Yoshida
